<h2 class="mb-4 text-center">Sửa thông tin phòng</h2>
<form method="POST" action="/phongtro/{{phong.idphong}}/update" style="max-width: 500px; margin: auto;">
  <div class="form-group mb-3">
    <label for="tenphong">Tên phòng:</label>
    <input type="text" class="form-control" id="tenphong" name="tenphong" value="{{phong.tenphong}}" required>
  </div>

  <div class="form-group mb-3">
    <label for="idphong">ID phòng:</label>
    <input type="text" class="form-control" id="idphong" name="idphong" value="{{phong.idphong}}" readonly>
  </div>

  <div class="form-group mb-3">
    <label for="trangthai">Trạng thái:</label>
    <select class="form-control" id="trangthai" name="trangthai" required>
      <option value="Chưa thuê" {{#if (eq phong.trangthai "Chưa thuê")}}selected{{/if}}>Chưa thuê</option>
      <option value="Đã thuê" {{#if (eq phong.trangthai "Đã thuê")}}selected{{/if}}>Đã thuê</option>
    </select>
  </div>

  <div class="form-group mb-3">
    <label for="hinhanh">Hình ảnh:</label>
    <input type="file" class="form-control" id="hinhanh" name="hinhanh" accept="image/*">
  </div>

  <div class="form-group mb-4">
    <label for="tiendatcoc">Tiền đặt cọc:</label>
    <input type="number" class="form-control" id="tiendatcoc" name="tiendatcoc" value="{{phong.tiendatcoc}}" required>
  </div>

  <button type="submit" class="btn btn-primary w-100">Lưu thay đổi</button>
</form>
