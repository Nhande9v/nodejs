<h2>Hóa đơn tổng hợp phòng</h2>
<table class="table">
  <thead>
    <tr>
      <th>Tháng</th>
      <th>Tiền điện</th>
      <th>Tiền nước</th>
      <th>Tiền thuê phòng</th>
      <th>Tổng tiền</th>
      <th>Ngày lập</th>
      <th>Trạng thái</th>
    {{#if isAdmin}}
      <th>Hành động</th>
    {{/if}}
    </tr>
  </thead>
  <tbody>
   {{#each hoadons}}
<tr>
  <td>{{this.thang}}</td>
  <td>{{formatCurrency this.tiendien}}</td>
  <td>{{formatCurrency this.tiennuoc}}</td>
  <td>{{formatCurrency this.tienthuephong}}</td>
  <td>{{formatCurrency this.tongtien}}</td>
  <td>{{formatDate this.ngaylap}}</td>
  <td>
    {{#if (eq this.trangthai "Đã thanh toán")}}
      <span class="badge badge-success">Đã thanh toán</span>
    {{else}}
      <span class="badge badge-warning">Chưa thanh toán</span>
    {{/if}}
  </td>

  <td>
  {{#if ../isAdmin}}
  {{!-- Sửa --}}
    <form method="POST" action="/hoadon/{{this.idphong}}/confirm?thang={{this.thang}}">
      <button type="submit" class="btn btn-success btn-sm ml-2">Xác nhận đã nhận tiền</button>
    </form>
  {{else}}
    <span class="text-muted">--</span>
  {{/if}}
</td>
</tr>
{{/each}}
  </tbody>
</table>

