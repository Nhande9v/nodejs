<div class="mt-4">
    <div class="row">
        {{#each phongtro}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-phongtro-item">
                {{#if this.img}}
                <img src="{{this.img}}" class="card-img-top" alt="Ảnh phòng {{this.tenphong}}" style="height: 200px; object-fit: cover;">
                {{/if}}
                <div class="card-body">
                    <h5 class="card-title">{{this.tenphong}}</h5>
                    <p>ID: {{this.idphong}}</p>
                    <p>Trạng thái: <span class="badge bg-success">{{this.trangthai}}</span></p>
                    <p>Tiền đặt cọc: <b>{{formatCurrency this.tiendatcoc}}</b></p>
                    {{#if ../isAdmin}}
                    {{#if (lookup ../hopdongMap this.idphong)}}
                    <a href="/hopdong/phong/{{this.idphong}}" class="btn btn-warning btn-sm">Sửa hợp đồng</a>
                    {{else}}
                    <a href="/hopdong/tao/{{this.idphong}}" class="btn btn-success btn-sm">Tạo hợp đồng</a>
                    {{/if}}
                    {{/if}}
                    {{#if ../isUser}}
                    <a href="/hopdong/phong/{{this.idphong}}" class="btn btn-info btn-sm">Xem hợp đồng</a>
                    {{/if}}
                    
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>