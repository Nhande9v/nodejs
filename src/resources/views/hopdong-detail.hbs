<h2 class="text-center mb-4">Chi tiết hợp đồng</h2>

<div class="card mx-auto" style="max-width: 600px;">
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Mã hợp đồng:</strong> {{hopdong.idhopdong}}</li>
      <li class="list-group-item"><strong>Phòng:</strong> {{hopdong.idphong}}</li>
      <li class="list-group-item"><strong>Khách thuê:</strong> {{hopdong.makt}}</li>
      <li class="list-group-item"><strong>Ngày bắt đầu:</strong> {{formatDate hopdong.ngaybatdau}}</li>
      <li class="list-group-item"><strong>Ngày kết thúc:</strong> {{formatDate hopdong.ngayketthuc}}</li>
      <li class="list-group-item"><strong>Tiền đặt cọc:</strong> {{formatCurrency hopdong.tiendatcoc}}</li>
      <li class="list-group-item"><strong>Trạng thái:</strong> 
        {{#if (eq hopdong.trangthai "Đang hiệu lực")}}
          <span class="badge bg-success">Đang hiệu lực</span>
        {{else if (eq hopdong.trangthai "Đã kết thúc")}}
          <span class="badge bg-secondary">Đã kết thúc</span>
        {{else}}
          {{hopdong.trangthai}}
        {{/if}}
      </li>
    </ul>

    <div class="mt-4 text-center">
      {{#if isAdmin}}
      <div class="mb-3">
        <form method="POST" action="/hopdong/{{hopdong.idhopdong}}/delete" style="display:inline-block; margin-right: 10px;">
          <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa hợp đồng này?')">Xóa hợp đồng</button>
        </form>
        <a href="/hopdong/phong/{{hopdong.idphong}}/{{hopdong.idhopdong}}/edit" class="btn btn-primary">Sửa hợp đồng</a>
      </div>
      {{/if}}
      <a href="/hopdong" class="btn btn-secondary">← Quay lại danh sách</a>
    </div>
  </div>
</div>