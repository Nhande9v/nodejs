<h2>Danh sách hợp đồng</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Mã hợp đồng</th>
      <th>Phòng</th>
      <th>Khách thuê</th>
      <th>Ngày bắt đầu</th>
      <th>Ngày kết thúc</th>
      <th>Trạng thái</th>
      <th>Chi tiết</th>
    </tr>
  </thead>
  <tbody>
    {{#each hopdongs}}
    <tr>
      <td>{{idhopdong}}</td>
      <td>{{idphong}}</td>
      <td>{{makt}}</td>
      <td>{{ngaybatdau}}</td>
      <td>{{ngayketthuc}}</td>
      <td>{{trangthai}}</td>
      <td>
        <a href="/hopdong/{{_id}}" class="btn btn-info btn-sm">Xem chi tiết</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>