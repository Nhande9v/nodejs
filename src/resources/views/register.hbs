<div class="mt-5">
  <h2 style="text-align: center;">Đăng ký tài khoản khách thuê</h2>
  <form method="POST" action="/dang-ky" style="max-width: 400px; margin: auto;">
    <div style="margin-bottom: 15px;">
      <label for="ten">Họ tên:</label><br>
      <input type="text" id="ten" name="ten" required style="width: 100%; padding: 8px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="email">Email:</label><br>
      <input type="email" id="email" name="email" required style="width: 100%; padding: 8px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="matKhau">Mật khẩu:</label><br>
      <input type="password" id="matKhau" name="matKhau" required style="width: 100%; padding: 8px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="sdt">Số điện thoại:</label><br>
      <input type="tel" id="sdt" name="sdt" required style="width: 100%; padding: 8px;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="cccd">Số CCCD:</label><br>
      <input type="text" id="cccd" name="cccd" required style="width: 100%; padding: 8px;">
    </div>

    <button type="submit" style="padding: 10px 20px;">Đăng ký</button>
  </form>
</div>